#   NAVIGATION
alias ..="cd .."
alias ~="cd ~"
alias p="cd ~/workspace"

#   TOOLS
alias finder="open ."

# DELETE
alias rm="=rm -rf"
alias clean="find . -name '*.DS_Store' -type f -ls -delete"

# IP Address
alias ip="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

#   OS X UTILS

# Empty trash
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# ZIP folder without hidden files
alias zip="zip -x *.DS_Store -x *__MACOSX* -x *.AppleDouble*"

# To kill all chrome tabs
alias kchrome="ps ux | grep '[C]hrome Helper --type=renderer' | grep -v extension-process | tr -s ' ' | cut -d ' ' -f2 | xargs kill"

#   DEVELOPMENT
# open visual studio code
alias vscode="code"

# Chrome aliases
alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias chrome-canary="/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary"
alias chromium="/Applications/Chromium.app/Contents/MacOS/Chromium"

# To update brew, npm, their installed packages
alias update='brew update; brew upgrade; brew cleanup; npm update npm -g; npm update -g;'

## END
